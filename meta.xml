<meta>
    <info 
        author='Nero'
        version='0.10.1 beta'
        name='Login panel'
        description='Панель авторизации с сохранением данных для входа, защитой через секретное слово и ограничением создания нескольких аккаунтов с одного устройства.'
        type='script'
    />

    <script src='client/*.lua' type='client'/>

    <script src='server/server.lua' type='server'/>
    <script src='server/events.lua' type='server'/>

    <script src='shared/*.lua' type='shared' cache='false'/>

    <settings>
        <setting name='@SignUpAttemptsLimit' value='5' desc="Лимит попыток регистрации"/>
        <setting name='@SignInAttemptsLimit' value='5' desc="Лимит попыток авторизации"/>
        <setting name='@Check2FAAttemptsLimit' value='5' desc="Лимит попыток проверки кодового слова" />
    </settings>

    <aclrequest>
        <right name='function.kickPlayer' access='true'/>
        <right name='function.addAccount' access='true'/>
        <right name='function.setAccountSerial' access='true'/>
    </aclrequest>

    <min_mta_version both='1.6.0-9.22430.0' />
</meta>
